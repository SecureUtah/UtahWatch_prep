<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="UtahWatch tracks the HTTPS support of websites in Utah">
    <meta name="viewport" content="width=800">
    <title>UtahWatch | {% block subtitle %}{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="static/main.css">
    <link rel="icon" type="image/png" href="static/favicon.png">
    {% block extra_head %}{% endblock %}
  </head>
  <body>
    {{ analytics }}
    <header>
      <nav class="header-nav">
        <ul class="header-nav-list">
        {% for page in meta["listings"] %}
          <li>
          {% if page.shortname is defined and listing is defined and page.shortname == listing.shortname %}
            <span class="header-nav-link-current">{{ page.name }}</span>
          {% else %}
            <a class="header-nav-link" href="{{ page.external if page.external is defined else page.shortname + ".html" }}">{{ page.name }}</a>
          {% endif %}
          </li>
        {% endfor %}
        </ul>
      </nav>
    </header>
    <div id="content-wrapper">
      {% block body %}{% endblock %}
      <hr>
      <br>
      <center><i><a href='#TOP'>Back to the top</a></i></center>
      <footer>
        UtahWatch is a project by <a href="http://secureutah.org" target="_blank" rel="noopener">SecureUtah.org</a>. Last updated <time>{{ update_time }}</time>.
      </footer>
    </div>
  </body>
</html>
